{
  "name": "iusd-landing",
  "private": true,
  "sideEffects": false,
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "serve": "vite preview",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src --fix",
    "test": "vitest run",
    "prepare": "simple-git-hooks"
  },
  "dependencies": {
    "@base-ui-components/react": "1.0.0-beta.4",
    "@lukemorales/query-key-factory": "^1.3.4",
    "@tanstack/react-query": "^5.90.0",
    "camelcase-keys": "^10.0.1",
    "gsap": "^3.13.0",
    "jotai": "^2.15.1",
    "keen-slider": "^6.8.6",
    "ky": "^1.14.0",
    "lenis": "^1.3.15",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "recharts": "^3.4.1",
    "usehooks-ts": "^3.1.1",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@csstools/postcss-global-data": "^3.1.0",
    "@initia/eslint-config-react-app": "^1.2.0",
    "@types/node": "^22.5.4",
    "@types/react": "^19.0.8",
    "@types/react-dom": "^19.0.3",
    "@vitejs/plugin-react": "^4.3.4",
    "eslint": "^9.38.0",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "lint-staged": "^16.2.6",
    "postcss": "^8.5.1",
    "postcss-preset-env": "^10.4.0",
    "prettier": "^3.6.2",
    "simple-git-hooks": "^2.13.1",
    "stylelint": "^16.25.0",
    "stylelint-order": "^7.0.0",
    "typescript": "^5.7.2",
    "vite": "^7.1.7",
    "vite-tsconfig-paths": "^5.1.4"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.css": [
      "prettier --write",
      "stylelint --fix"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  }
}
